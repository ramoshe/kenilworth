---
import Layout from "../layouts/Layout.astro";
export const prerender = false;
---

<Layout title="Events">
  <section id="events">
    <h3>Events</h3>
    <div class="googleCalendar">
      <iframe src="https://calendar.google.com/calendar/embed?height=800&wkst=1&ctz=America%2FNew_York&showPrint=0&src=a3BuYWluY0BnbWFpbC5jb20&color=%23039BE5" style="border:solid 1px #777" width="1000" height="800" frameborder="0" scrolling="no"></iframe>
    </div>
  </section>
</Layout>

<style>
  .googleCalendar{
    position: relative;
    height: 0;
    width: 100%;
    padding-bottom: 80%;
    margin-bottom: 10em;
  }
  .googleCalendar iframe{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>